<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--Components-->
    <style name="title_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MyTheme.Headline1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/support_blue</item>
        <item name="android:background">@color/bearkat_orange</item>
    </style>

    <style name="calculations_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MyTheme.Headline4</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="linear_layout_nums">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:weightSum">3</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="number_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MyTheme.SmallComponent</item>

    </style>

    <style name="relative_number_buttons">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/bearkat_orange</item>
        <item name="backgroundColor">@color/black</item>
        <item name="backgroundTint">@color/support_blue</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MyTheme.SmallComponent</item>
    </style>

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>
    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>
</resources>